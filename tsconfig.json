{
  "compilerOptions": {
    "outDir": "lib/es",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "checkJs": false,
    "declaration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/jest-enzyme"],
    "rootDirs": [ "/src", "/test", "/mock", "typings"],
    "baseUrl": ".",
    "esModuleInterop": true
  },
  "include": [
    "./src",
    "./src/**/*",
    "./typings.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./src/**/*.spec.*"
  ]
}
